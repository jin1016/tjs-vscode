{
    "name": "tjs-vscode",
    "displayName": "TJS",
    "description": "Adding TJS language support for Visual Studio Code",
    "version": "0.1.4",
    "publisher": "Biscrat",
    "license": "MIT",
    "icon": "images/tjsicon.png",
    "engines": {
        "vscode": "^1.5.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sakano/tjs-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/sakano/tjs-vscode/issues"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "kirikiri"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tjs",
                "aliases": [
                    "TJS",
                    "tjs"
                ],
                "extensions": [
                    ".tjs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tjs",
                "scopeName": "source.tjs",
                "path": "./syntaxes/tjs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "tjs",
                "path": "./snippets/tjs.json"
            }
        ],
        "commands": [
            {
                "command": "tjs.updateCtags",
                "title": "Update Ctags File",
                "category": "TJS"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "TJS configuration",
            "properties": {
                "tjs.ctagsFilePath": {
                    "title": "File name of the Ctags' index file",
                    "type": "string",
                    "default": ".tags"
                },
                "tjs.ctagsRootPath": {
                    "title": "Root path to search tjs files",
                    "type": "string",
                    "default": ""
                },
                "tjs.ctagsFileExtensions": {
                    "title": "File extesions to handle as tjs file",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".tjs"
                    ]
                },
                "tjs.ctagsExtraOption": {
                    "title": "Ctags option",
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "main": "./out/src/extension",
    "activationEvents": [
        "onLanguage:tjs",
        "onCommand:tjs.updateCtags"
    ]
}
