{
    "name": "tjs-vscode",
    "displayName": "TJS",
    "description": "%tjs.description%",
    "version": "1.0.2",
    "publisher": "Biscrat",
    "license": "MIT",
    "icon": "images/tjsicon.png",
    "engines": {
        "vscode": "^1.21.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sakano/tjs-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/sakano/tjs-vscode/issues"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "kirikiri"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tjs",
                "aliases": [
                    "TJS",
                    "tjs"
                ],
                "extensions": [
                    ".tjs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tjs",
                "scopeName": "source.tjs",
                "path": "./syntaxes/tjs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "tjs",
                "path": "./snippets/tjs.json"
            }
        ],
        "commands": [
            {
                "command": "tjs.updateCtags",
                "title": "%tjs.updateCtags.title%",
                "category": "TJS"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "%tjs.configuration.title%",
            "properties": {
                "tjs.ctagsProcess": {
                    "description": "%tjs.ctagsProcess.description%",
                    "type": "array",
                    "default": [
                        {
                            "tagFilePath": ".tags",
                            "searchPath": "",
                            "searchRecursive": true,
                            "runOnSave": false,
                            "fileExtensions": [
                                ".tjs"
                            ],
                            "extraOption": ""
                        }
                    ],
                    "items": {
                        "type": "object",
                        "properties": {
                            "tagFilePath": {
                                "description": "%tjs.items.tagFilePath.description%",
                                "type": "string",
                                "default": ".tags"
                            },
                            "searchPath": {
                                "description": "%tjs.items.searchPath.description%",
                                "type": "string",
                                "default": ""
                            },
                            "searchRecursive": {
                                "description": "%tjs.items.searchRecursive.description%",
                                "type": "boolean",
                                "default": true
                            },
                            "runOnSave": {
                                "description": "%tjs.items.runOnSave.description%",
                                "type": "boolean",
                                "default": false
                            },
                            "fileExtensions": {
                                "description": "%tjs.items.fileExtensions.description%",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    ".tjs"
                                ]
                            },
                            "extraOption": {
                                "description": "%tjs.items.extraOption.description%",
                                "type": "string",
                                "default": ""
                            }
                        }
                    }
                },
                "tjs.ctagsRunOnSaveLanguages": {
                    "description": "%tjs.ctagsRunOnSaveLanguages.description%",
                    "type": "array",
                    "default": [
                        "tjs"
                    ],
                    "items": {
                        "type":"string"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:tjs",
        "onCommand:tjs.updateCtags"
    ]
}
