{
    "name": "itjs-vscode",
    "displayName": "iTJS",
    "description": "%tjs.description%",
    "version": "1.0.2",
    "publisher": "Biscrat",
    "license": "MIT",
    "icon": "images/tjsicon.png",
    "engines": {
        "vscode": "^1.21.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sakano/tjs-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/sakano/tjs-vscode/issues"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "kirikiri"
    ],
    "contributes": {
        "languages": [
            {
                "id": "itjs",
                "aliases": [
                    "iTJS",
                    "itjs"
                ],
                "extensions": [
                    ".itjs",
                    ".oitjs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "itjs",
                "scopeName": "source.itjs",
                "path": "./syntaxes/tjs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "itjs",
                "path": "./snippets/tjs.json"
            },
            {
                "language": "itjs",
                "path": "./snippets/itjs.json"
            }
        ],
        "commands": [
            {
                "command": "itjs.updateCtags",
                "title": "%tjs.updateCtags.title%",
                "category": "iTJS"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "%tjs.configuration.title%",
            "properties": {
                "tjs.ctagsFilePath": {
                    "description": "%tjs.ctagsFilePath.description%",
                    "type": "string",
                    "default": ".tags"
                },
                "tjs.ctagsRootPath": {
                    "description": "%tjs.ctagsRootPath.description%",
                    "type": "string",
                    "default": ""
                },
                "tjs.ctagsFileExtensions": {
                    "description": "%tjs.ctagsFileExtensions.description%",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".tjs",
                        ".itjs"
                    ]
                },
                "tjs.ctagsExtraOption": {
                    "description": "%tjs.ctagsExtraOption.description%",
                    "type": "string",
                    "default": ""
                },
                "tjs.ctagsRunOnSave": {
                    "description": "%tjs.ctagsRunOnSave.description%",
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:itjs",
        "onCommand:itjs.updateCtags"
    ]
}
